{
  "private": true,
  "workspaces": [
    "packages/infra",
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "cdk": "cd packages/infra && yarn cdk",
    "build:backend": "cd packages/backend && yarn build",
    "prepare:frontend": "node packages/scripts/populate-frontend-config.js",
    "build:frontend": "cd packages/frontend && yarn build",
    "start:frontend": "cd packages/frontend && yarn start"
  },
  "devDependencies": {
    "aws-cdk": "^2.173.2",
    "esbuild": "^0.20.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "2.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md}": "prettier --write"
  },
  "packageManager": "yarn@4.4.0",
  "dependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "bootstrap": "^5.3.3",
    "react": "19.0.0",
    "react-bootstrap": "^2.10.7",
    "react-dom": "19.0.0"
  }
}
